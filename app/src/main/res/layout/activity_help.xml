<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_bg"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/helpScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_section1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👋 Welcome!"
                    android:textSize="20sp"
                    android:textColor="#026580"
                    android:fontFamily="@font/comic_font"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi Science Genius!\nReady to explore the world of science? Here’s how to play!"
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:fontFamily="@font/comic_font"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

            <!-- Section 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_section2"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📘 How to Use"
                    android:textSize="20sp"
                    android:textColor="#026580"
                    android:fontFamily="@font/comic_font"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Choose a Topic: Humans, Microorganisms, or Solar System.\n✅ Read &amp; Learn: Scroll through fun illustrations.\n✅ Take a Quiz: Answer 10 questions to test your knowledge."
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:fontFamily="@font/comic_font"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

            <!-- Section 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_section3"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 Navigation Tips"
                    android:textSize="20sp"
                    android:textColor="#026580"
                    android:fontFamily="@font/comic_font"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔙 Use the Back button to return to the main screen.\n🏆 Your score is shown after each quiz.\n💡 Questions change every time you play!"
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:fontFamily="@font/comic_font"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

            <!-- Section 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_section4"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✉️ Need Help?"
                    android:textSize="20sp"
                    android:textColor="#026580"
                    android:fontFamily="@font/comic_font"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Having trouble? Ask your teacher or tell a grown-up to help!\n\nContact us at:\nsciencegenius@appsupport.com"
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:fontFamily="@font/comic_font"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="Back to Main"
        android:textAllCaps="false"
        android:backgroundTint="#026580"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/comic_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
