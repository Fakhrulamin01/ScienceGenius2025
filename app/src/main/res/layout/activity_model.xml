<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:contentDescription="Rotate Model"
        android:src="@android:drawable/ic_media_play" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#66000000"
        android:gravity="center_horizontal">

        <!-- One row for 9 model buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kidney"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skeleton"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virus"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bacteria"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fungi"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solar System"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earth"
                    android:layout_margin="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_model9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:layout_margin="4dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Clear Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_models"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Models"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</FrameLayout>
