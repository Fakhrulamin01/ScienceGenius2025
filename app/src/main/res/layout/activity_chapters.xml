<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chap_bg">

    <!-- Main Content Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comic_font"
                android:paddingBottom="90dp"
                android:text="ðŸ“š Choose a Chapter"
                android:textAllCaps="false"
                android:textColor="#E65100"
                android:textSize="31sp"
                android:textStyle="bold" />

            <!-- Human Body Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHumanBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/body_systems_icon"
                        android:contentDescription="Human Body"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ§  Human"
                        android:textSize="18sp"
                        android:fontFamily="@font/comic_font"
                        android:paddingStart="16dp"
                        android:textColor="#4E342E" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Microorganisms Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMicroorganisms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/microorganism_icon"
                        android:contentDescription="Microorganisms"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¦  Microorganisms"
                        android:textSize="18sp"
                        android:fontFamily="@font/comic_font"
                        android:paddingStart="16dp"
                        android:textColor="#4E342E" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Solar System Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSolarSystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/solar_system_icon"
                        android:contentDescription="Solar System"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒž Solar System"
                        android:textSize="18sp"
                        android:fontFamily="@font/comic_font"
                        android:paddingStart="16dp"
                        android:textColor="#4E342E" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Back Button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:text="Back to Main"
                android:backgroundTint="#026580"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comic_font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="160dp" />
        </LinearLayout>


    </ScrollView>

</FrameLayout>
