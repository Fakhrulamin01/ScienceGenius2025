<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E0F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/comic_font"
            android:textColor="#00796B"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Section 1: What are microorganisms -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#B2EBF2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/microorganisms_intro"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/section1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/speech_bubble"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="17sp"
                    android:fontFamily="@font/comic_font"
                    android:textColor="#004D40" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: Types of microorganisms -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#B3E5FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/microorganism_types"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/section2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/speech_bubble"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="17sp"
                    android:fontFamily="@font/comic_font"
                    android:textColor="#004D40" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3: Good vs Bad -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#C8E6C9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/good_vs_bad_microbes"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/section3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/speech_bubble"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="17sp"
                    android:fontFamily="@font/comic_font"
                    android:textColor="#004D40" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 4: Hygiene -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFE0B2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/clean_hands"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/section4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/speech_bubble"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="17sp"
                    android:fontFamily="@font/comic_font"
                    android:textColor="#004D40"
                    android:paddingBottom="32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
